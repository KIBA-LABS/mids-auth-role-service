<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
<changeSet author="sumit" id="mids-auth-customer-v1.0-1.0">
<createTable tableName="customers">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName = "pk_customers"/>
            </column>
            <column name="name" type="Varchar(100)">
                <constraints nullable="false"/>
				</column>
				<column name="email" type="Varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="customerid" type="Varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="Varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="Varchar(255)">
            </column>
            <column name="contact_person" type="Varchar(100)">
                
            </column>
            <column name="contact_number" type="Varchar(100)">
                
            </column>
            <column name="contact_email" type="Varchar(100)">
           
            </column>
            <column name="status" type="Varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
		</changeSet>
</databaseChangeLog>